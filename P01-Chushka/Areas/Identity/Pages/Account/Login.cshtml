@page
@model LoginModel


    <div class="mt-3">
        <section>
            <form class="mx-auto half-width" method="post">
                <h1 class="text-center">Login</h1>
                 <hr class="bg-secondary half-width"/>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.UserName"></label>
                    <input asp-for="Input.UserName" class="form-control" id="username" placeholder="Username..."  />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" id="password" placeholder="Password..." name="password" />
                    <span asp-validation-for="Input.Password"  class="text-danger"></span>
                </div>
              
                <div class="button-holder d-flex justify-content-center">
                    <button type="submit"class="btn chushka-bg-color">Login</button>
                </div>
               
            </form>
        </section>
    </div>
    

